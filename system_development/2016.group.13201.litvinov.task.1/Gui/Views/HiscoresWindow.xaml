<Window x:Class="Gui.Views.HiscoresWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Лучшие результаты" Height="300" Width="300" PreviewKeyDown="HiscoresWindow_OnPreviewKeyDown"
        xmlns:vm="clr-namespace:Gui.ViewModels"
             d:DataContext="{d:DesignInstance vm:HiscoresWindowViewModel}" x:ClassModifier="internal">
    <DataGrid AutoGenerateColumns="False" ItemsSource="{Binding Hiscores}">
        <DataGrid.Columns>
            <DataGridTextColumn Header="Имя" Binding="{Binding Username}" Width="*"/>
            <DataGridTextColumn Header="Очки" Binding="{Binding Score}" Width="*"/>
        </DataGrid.Columns>
        
    </DataGrid>
</Window>
