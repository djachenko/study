<UserControl x:Class="Gui.Views.GameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Gui.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             xmlns:vm="clr-namespace:Gui.ViewModels"
             d:DataContext="{d:DesignInstance vm:GameViewModel}" x:ClassModifier="internal">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
            
        <Viewbox Grid.Row="0">
            <Grid>
                <local:GameObjectsView DataContext="{Binding StaticGameObjectsViewModel}" Panel.ZIndex="1"/>
                <local:GameObjectsView DataContext="{Binding HeroesViewModel}" Panel.ZIndex="2"/>
            </Grid>
        </Viewbox>
    </Grid>
</UserControl>
